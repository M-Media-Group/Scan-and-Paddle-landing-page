        //-             .col-sm-8.col-md-6
        //-                 .px-5.px-sm-0
        //-                     img.img-fluid.rounded(src='assets/img/standup-paddleboarding.jpg' alt='...')

        // How to get a paddleboard section
        section.bg-light
            .container.px-5
                .row.gx-5.align-items-center.justify-content-center.justify-content-lg-between
                    .col-12.col-lg-5
                        h2.display-4.lh-1.mb-4 Boards that don't bore
                        p.lead.fw-normal.text-muted.mb-3 Beginners and pros alike will love our boards.
                        ul.lead.fw-normal.text-muted.mb-5.mb-lg-0
                            li.mb-1
                                | Rigid and incredibly durable
                            li.mb-1
                                | Stable and easy to paddle
                            li.mb-1
                                | Supports up to two people
                            li.mb-1
                                | Comes with bungee cords
                    .col-sm-8.col-md-6
                        .px-5.px-sm-0
                            img.img-fluid.rounded(src='assets/img/standup-paddleboarding.jpg' alt='...')

        // Call to action section
        section.cta
            .cta-content
                .container.px-5
                    h2.text-white.display-2.lh-1.mb-4
                        | #{AppName}
                    p.lead.fw-normal.text-white.mb-5 Join our waiting list to get early access to SUP rentals.
                    include includes/join-waitlist-form.pug

        // Quote/testimonial aside
        aside.text-center.bg-gradient-primary-to-secondary
            .container.px-5
                .row.gx-5.justify-content-center
                    .col-xl-8
                        .h2.fs-1.text-white.mb-4 Launching in France starting with #{LaunchAreas} #{LaunchDate}
                        //- img(src='assets/img/tnw-logo.svg' alt='...' style='height: 3rem;')

        // Footer
        footer.bg-black.text-center.py-5
            .container.px-5
                .text-white-50.small
                    .mb-2 &copy; #{AppName} 2022. All Rights Reserved.
                    a(href='#!') Privacy
                    span.mx-1 &middot;
                    a(href='#!') Terms
                    span.mx-1 &middot;
                    a(href='#!') FAQ

        include includes/feedback-modal.pug

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')

